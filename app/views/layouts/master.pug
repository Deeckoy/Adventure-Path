//- Master layout
doctype html
html(lang='ru')
  head

    //- Meta
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=5')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')

    meta(name='msapplication-TileColor' content='#ffffff')
    meta(name='theme-color' content='#ffffff')

    //- SEO

    //- Basic Seo
    block basicSeo
      meta(name='description' content='Дорога приключений - модный, стильный, молодёжный сервер майнкрафт')
      meta(name='keywords' content='minecraft, сервер')
      meta(name='author' content='Edward Haussauer')

    //- Twitter
    meta(name='twitter:card' content='summary')
    meta(name='twitter:site' content='@AdventurePath')
    meta(name='twitter:image' content='assets/img/meta_bg.jpg')
    meta(name='twitter:title' content='Дорога приключений')
    meta(name='twitter:description' content='Дорога приключений - модный, стильный, молодёжный сервер майнкрафт')
    meta(name='twitter:creator' content='@EdwardHaussauer')
    meta(name='twitter:creator:id' content='@EdwardHaussauer')

    //- Facebook
    meta(property='og:url' content='')
    meta(property='og:title' content='Дорога приключений')
    meta(property='og:description' content='Дорога приключений - модный, стильный, молодёжный сервер майнкрафт')
    meta(property='og:image' content='assets/img/meta_bg.jpg')
    meta(property='og:type' content='website')
    meta(property='og:locale' content='ru_RU')

    //- Favicons
    link(rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="assets/img/favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="assets/img/favicons/favicon-16x16.png")
    link(rel="mask-icon" href="assets/img/favicons/safari-pinned-tab.svg" color="#ee2a2e")
    link(rel="shortcut icon" href="assets/img/favicons/favicon.ico")

  //- link(rel='apple-touch-icon' sizes='180x180' href='assets/img/favicons/apple-touch-icon.png')
  //- link(rel='icon' type='image/png' sizes='32x32' href='assets/img/favicons/favicon-32x32.png')
  //- link(rel='icon' type='image/png' sizes='16x16' href='assets/img/favicons/favicon-16x16.png')
  //- link(rel='shortcut icon' href='assets/img/favicons/favicon.ico')

  //- Title
  block title
    title Your project!

  //- Manifest browserconfig files
  block manifestBrowserconfigFiles
    link(rel='manifest' href='manifest.json', crossorigin)
    meta(name='msapplication-config' content='browserconfig.xml')

  body

    #app
      //- block content
      block content

    //- block scripts
    block scripts